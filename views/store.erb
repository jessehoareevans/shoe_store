<% if @stores.any? %>
  <h3>All Stores</h3>
  <p>
      Click on a link to edit or delete the store
  </p>
  <ul>
    <% @stores.each() do |store| %>
    <li><a href="/store/<%= store.id() %>"><%= store.name() %></a></li>
    <% end %>
  </ul>

  <% else %>

  <% end %>

<div class="well">
  <form class="form-horizontal" action="/store" method="post">
    <label for="store_name">Name of the store:</label>
    <input type="text" id="store_name" name="store_name">
    <button type="submit" name="button">Submit</button>
  </form>
</div>

<% if @stores.any? %>
    <div class="form-group">
      <label for="">Pick any relevant stores for your brand</label>
      <% @stores.each() do |store| %>
      <label class="form-check-label"><%= store.name() %> <input type="checkbox" name="store_ids[]" value="<%= store.id()%>"></label>
      <% end %>
    </div>
    <% else %>
    <div class="form-group">
      <h3>Please add a store to your brand</h3>
    </div>
<p>
  <a href="/">Home</a>
</p>
