<% if @stores.any? %>
  <h3>All Stores</h3>
  <p>
      Click on a link to edit or delete the store
  </p>
  <ul>
    <% @stores.each() do |store| %>
    <li><a href="/store/<%= store.id() %>"><%= store.name() %></a></li>
    <% end %>
  </ul>

  <% else %>

  <% end %>

<div class="well">
  <form class="form-horizontal" action="/store" method="post">
    <label for="store_name">Name of the store:</label>
    <input type="text" id="store_name" name="store_name">
    <button type="submit" name="button">Submit</button>
  </form>
</div>
<p>
  <a href="/">Home</a>
</p>
