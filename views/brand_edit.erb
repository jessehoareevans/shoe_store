<div class="well">
  <form class="form-horizontal" action="/brand/<%= @brand.id() %>" method="post">
    <input type="hidden" name="_method" value="patch">
    <label for="brand_type">Rename this Brand "<%= @brand.name() %>"</label>
    <input type="text" name="brand_type" id="brand_type">
    <button class="btn btn-info" type="submit" name="button">Submit</button>
  </form>
</div>

<div class="well">
  <form class="form-horizontal" action="/brand/<%= @brand.id() %>" method="post">
    <input type="hidden" name="_method" value="delete">
    <label for="delete">Delete this Brand "<%= @brand.name() %>" ?</label>
    <button class="btn btn-danger" type="submit" name="button">Delete</button>
  </form>
</div>
